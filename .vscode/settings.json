{
    "editor.rulers": [
        80,
        120
    ],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "python.testing.pytestArgs": [
        "server/auth_function"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "./server/backend/venv/bin/python",
    "python.pythonPath": "./server/backend/venv/bin/python",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Args": ["--append-config=${workspaceFolder}/server/backend/.flake8"],
    "workbench.list.openMode": "doubleClick",
    "python.testing.cwd": "",

    "recommendations": ["Vue.volar", "Vue.vscode-typescript-vue-plugin"],
    "python.languageServer": "Pylance"
}


